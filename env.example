# Docker Compose Environment Variables

# Network Configuration
NETWORK_NAME=medavault-network

# WebDAV Server Configuration
WEBDAV_PORT_HTTP=8081
WEBDAV_PORT_HTTPS=8443
WEBDAV_USER=webdav
WEBDAV_PASSWORD=medavault123
WEBDAV_STORAGE=./storage/incoming

# FileStash Web Client
FILESTASH_PORT=8082

# MedaVault Backend Configuration
BACKEND_PORT=8083
NODE_ENV=development

# Database Configuration
POSTGRES_DB=medavault
POSTGRES_USER=medavault
POSTGRES_PASSWORD=medavault123
DB_HOST=medavault-db
DB_PORT=5432

# Application URLs
WEBDAV_URL=http://webdav-server
BACKEND_URL=http://medavault-backend:3000

# Storage Paths
STORAGE_PATH=./storage
PROCESSED_PATH=${STORAGE_PATH}/processed
INCOMING_PATH=${STORAGE_PATH}/incoming

# Logging
LOG_LEVEL=info
LOG_PATH=./logs

# Web Dashboard Configuration
WEB_DASHBOARD_PORT=8085
