# =====================================
# Application Settings
# =====================================
TZ=Europe/Warsaw
NODE_ENV=development
LOG_LEVEL=debug

# =====================================
# S3 Storage Configuration (MinIO)
# =====================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
S3_BUCKET=medavault
S3_REGION=us-east-1
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_FORCE_PATH_STYLE=true
S3_MAX_UPLOAD_SIZE=5G
S3_MAX_FILE_SIZE=5G

# =====================================
# WebDAV Server Configuration
# =====================================
WEBDAV_HOST=localhost
WEBDAV_PORT_HTTP=9081
WEBDAV_PORT_HTTPS=9443
WEBDAV_STATUS_PORT=9082
WEBDAV_PATH=/webdav
WEBDAV_USER=webdav
WEBDAV_PASSWORD=medavault123
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024
CLIENT_MAX_BODY_SIZE=0

# =====================================
# Filestash Configuration
# =====================================
FILESTASH_HOST=localhost
FILESTASH_PORT=9083

# =====================================
# Database Configuration
# =====================================
DB_HOST=medavault-db
DB_PORT=5432
POSTGRES_DB=medavault
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# =====================================
# Backend API Configuration
# =====================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=9084
API_BASE_PATH=/api
JWT_SECRET=your_jwt_secret_here

# =====================================
# Web Dashboard Configuration
# =====================================
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=9085

# =====================================
# Storage Paths
# =====================================
STORAGE_PATH=./storage
PROCESSED_PATH=./processed
INCOMING_PATH=./incoming
LOG_PATH=./logs

# =====================================
# Camel Integration Configuration
# =====================================
POLL_INTERVAL=10000
PROCESSING_ENABLED=true

# =====================================
# System User/Group IDs
# =====================================
PUID=1000
PGID=1000

